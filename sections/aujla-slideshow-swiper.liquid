<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>
<script src="{{ 'aujla-slideshow-swiper.js' | asset_url }}" defer></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
{{ 'aujla-slideshow-swiper.css' | asset_url | stylesheet_tag }}

<div
  class="swiper mySwiper ag-responsive-image-wrapper color-{{section.settings.color_scheme}} gradient"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
  data-autoplay-delay="{{ section.settings.autoplay_delay }}"
>
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide">
        <a href="{{ block.settings.link | escape }}" class="slideshow-link">
          <picture>
            <source media="(max-width: 749px)" srcset="{{ block.settings.image_mobile | image_url: width: 750 }}">
            <img
              src="{{ block.settings.image_desktop | image_url }}"
              alt="Slide {{ forloop.index }}"
              loading="lazy"
              height="100%"
              width="100%"
            >
          </picture>
        </a>
      </div>
    {% endfor %}
  </div>
  <div class="swiper-pagination"></div>
</div>

{% schema %}
{
  "name": "Slideshow by Aujla",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "range",
      "id": "autoplay_delay",
      "label": "Slide Change Time (ms)",
      "unit": "ms",
      "min": 1000,
      "max": 9000,
      "step": 500,
      "default": 4000
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop Image",
          "info": "Recommended size: 1920x700px"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image",
          "info": "Recommended size: 1080x1080px"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Slide Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Responsive Slideshow | Aujla",
      "category": "Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
