{% schema %}
{
  "name": "Responsive Left Right",
  "tag": "section",
  "class": "ag-responsive-left-right-content",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    }
  ],

  "blocks": [
    {
      "name": "Left Image Right Content",
      "type": "lr-content",
      "settings": [
        {
          "type": "image_picker",
          "id": "content_product_image",
          "label": "Content Image DeskTop"
        },
        {
          "type": "image_picker",
          "id": "content_product_image_m",
          "label": "Content Image Mobile"
        },
        {
          "type": "text",
          "id": "content_product_title",
          "label": "Content Title"
        },
        {
          "type": "richtext",
          "id": "content_product_desciption",
          "label": "Content Description"
        }
      ]
    },
    {
      "name": "Right Image Left Content",
      "type": "rl-content",
      "settings": [
        {
          "type": "image_picker",
          "id": "content_product_image",
          "label": "Image for Content"
        },
        {
          "type": "image_picker",
          "id": "content_product_image_m",
          "label": "Content Image Mobile"
        },
        {
          "type": "text",
          "id": "content_product_title",
          "label": "Content Title"
        },
        {
          "type": "richtext",
          "id": "content_product_desciption",
          "label": "Content Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Page LR | Aujla",
      "blocks": [
        {
          "type": "lr-content"
        },
        {
          "type": "rl-content"
        },
        {
          "type": "lr-content"
        }
      ]
    }
  ]
}
{% endschema %}
