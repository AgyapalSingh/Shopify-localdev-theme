<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>
<script src="{{ 'aujla-mini-slideshow.js' | asset_url }}" defer></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
{{ 'aujla-mini-slideshow.css' | asset_url | stylesheet_tag }}

<div
  class="my-mini-swiper color-{{section.settings.color_scheme}} gradient"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
  data-autoplay-delay="{{ section.settings.autoplay_delay }}"
>
  <div class="mini-slideshow-container">
    <div class="swiper mini-slideshow-left">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <div class="swiper-slide">
            <picture>
              <source media="(max-width: 749px)" srcset="{{ block.settings.image_mobile | image_url}}">
              <img
                src="{{ block.settings.image_desktop | image_url }}"
                alt="Slide {{ forloop.index }}"
                loading="lazy"
                height="100%"
                width="100%"
                class="swiper-slide-image"
              >
            </picture>
          </div>
        {% endfor %}
      </div>

      <div class="swiper-pagination"></div>
    </div>

    <div class="mini-slideshow-right">
      <h2 class="mini-slideshow-title">{{ section.settings.mini_slideshow_title }}</h2>
      <div class="mini-slideshow-description">
        {{ section.settings.mini_slideshow_description }}
      </div>
      {% if section.settings.button_label and section.settings.button_link %}
        <a href="{{ section.settings.button_link }}" class="button button--primary">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Mini Slideshow by Aujla",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "mini_slideshow_title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "mini_slideshow_description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "autoplay_delay",
      "label": "Slide Change Time (ms)",
      "unit": "ms",
      "min": 1000,
      "max": 9000,
      "step": 500,
      "default": 4000
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "mini_slide",
      "name": "Mini Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Desktop Image",
          "info": "Recommended size: 960x700px"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Mobile Image",
          "info": "Recommended size: 1080x1080px"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Responsive Mini Slideshow | Aujla",
      "category": "Slideshow",
      "blocks": [
        {
          "type": "mini_slide"
        },
        {
          "type": "mini_slide"
        },
        {
          "type": "mini_slide"
        }
      ]
    }
  ]
}
{% endschema %}
