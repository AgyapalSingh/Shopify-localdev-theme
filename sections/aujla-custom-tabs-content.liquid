<div
  class="custom-responsive-tabs-content-wrapper color-{{ section.settings.color_scheme }} gradient"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
>
  {% if section.blocks.size > 0 %}
    <div class="tabs-content-nav">
      {% for block in section.blocks %}
        <button
          type="button"
          class="tabs-content-button {% if forloop.first %}active{% endif %}"
          data-tab="tab-{{ block.id }}"
        >
          {{ block.settings['tabs-content-title'] }}
        </button>
      {% endfor %}
    </div>

    <div class="tabs-content-content">
      {% for block in section.blocks %}
        <div class="tab-panel {% if forloop.first %}active{% endif %}" id="tab-{{ block.id }}">
          {{ block.settings['tabs-content-content'] }}
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const tabButtons = document.querySelectorAll('.tabs-content-button');
    const tabPanels = document.querySelectorAll('.tab-panel');

    if (tabButtons.length && tabPanels.length) {
      tabButtons.forEach((button) => {
        button.addEventListener('click', function () {
          const tabId = this.getAttribute('data-tab');

          tabButtons.forEach((btn) => btn.classList.remove('active'));
          tabPanels.forEach((panel) => panel.classList.remove('active'));

          this.classList.add('active');
          document.getElementById(tabId).classList.add('active');
        });
      });
    }
  });
</script>

<style>
  .tabs-content-nav {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    border-bottom: 1px solid #ddd;
  }

  .tabs-content-button {
    padding: 10px 16px;
    background: none;
    border: none;
    cursor: pointer;
    font-weight: 500;
    transition: all 0.3s ease;
    color: #555;
  }

  .tabs-content-button.active {
    border-bottom: 2px solid #111;
    color: #111;
  }

  .tab-panel {
    display: none;
    padding-top: 20px;
    animation: fadeIn 0.3s ease-in-out;
  }

  .tab-panel.active {
    display: block;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

{% schema %}
{
  "name": "Tabs For Content",
  "tag": "section",
  "class": "ag-responsive-tabs-content",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "name": "Add Tabs Item",
      "type": "tabs-content-items",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "tabs-content-title",
          "label": "Tab Title",
          "default": "Sample Tabs Title"
        },
        {
          "type": "richtext",
          "id": "tabs-content-content",
          "label": "Tab Content",
          "default": "<p>Sample Tabs Content</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Responsive Tabs For Content | Aujla",
      "blocks": []
    }
  ]
}
{% endschema %}
