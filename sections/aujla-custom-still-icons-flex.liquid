{{ 'aujla-custom-still-icons-flex.css' | asset_url | stylesheet_tag }}

<div
  class="custom-still-icons-flex-wrapper color-{{section.settings.color_scheme}} gradient"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
  {% if settings.animations_reveal_on_scroll %}
    scroll-trigger animate--slide-in
  {% endif %}
>
  <div class="custom-still-icons-flex-container">
    <div class="custom-still-icons-section-title-flex">
      <h2 class="still-icons-section-title-flex">{{ section.settings['custom-still-section-title-flex'] }}</h2>
    </div>
    <div class="custom-icons-grid-flex">
      {% for block in section.blocks %}
        <div class="icon-item-flex">
          {% if block.settings['custom-still-icons-flex'] %}
            <img
              src="{{ block.settings.custom-still-icons-flex | image_url  }}"
              width="150"
              height="150"
              alt="Icon"
              class="icon-image-flex"
            >
          {% endif %}
          {% if block.settings['custom-still-icons-title-flex'] %}
            <div class="icon-title-flex">{{ block.settings['custom-still-icons-title-flex'] }}</div>
          {% endif %}
          {% if block.settings['custom-still-icons-description-flex'] %}
            <div class="icon-description-flex">{{ block.settings['custom-still-icons-description-flex'] }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Still Icons Flex",
  "tag": "section",
  "class": "custom-still-icons-flex",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "custom-still-section-title-flex",
      "label": "Content Title"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "name": "Add Still Icons",
      "type": "custom-still-icons-flex",
      "settings": [
        {
          "type": "image_picker",
          "id": "custom-still-icons-flex",
          "label": "Add Icons"
        },
        {
          "type": "text",
          "id": "custom-still-icons-title-flex",
          "label": "Add Title"
        },
        {
          "type": "richtext",
          "id": "custom-still-icons-description-flex",
          "label": "Add Description"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Custom Still Icons List Flex | Aujla",
      "category": "Icons",
      "blocks": [
        {
          "type": "custom-still-icons-flex"
        },
        {
          "type": "custom-still-icons-flex"
        },
        {
          "type": "custom-still-icons-flex"
        }
      ]
    }
  ]
}
{% endschema %}
