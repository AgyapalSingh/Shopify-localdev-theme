{{ 'aujla-custom-icons.css' | asset_url | stylesheet_tag }}

<div
  class="custom-still-icons-wrapper color-{{section.settings.color_scheme}} gradient"
  style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;"
  {% if settings.animations_reveal_on_scroll %}
    scroll-trigger animate--slide-in
  {% endif %}
>
  <div class="custom-still-icons-container">
    <div class="custom-still-icons-section-title">
      <h2 class="still-icons-section-title">{{ section.settings['custom-still-section-title'] }}</h2>
    </div>
    <div class="custom-icons-grid">
      {% for block in section.blocks %}
        <div class="icon-item">
          {% if block.settings['custom-still-icons'] %}
            <img src="{{ block.settings.custom-still-icons | image_url }}" alt="Icon" class="icon-image">
          {% endif %}
          {% if block.settings['custom-still-icons-title'] %}
            <p class="icon-title">{{ block.settings['custom-still-icons-title'] }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Still Icons",
  "tag": "section",
  "class": "custom-still-icons",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "custom-still-section-title",
      "label": "Content Title"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "name": "Add Still Icons",
      "type": "custom-still-icons",
      "settings": [
        {
          "type": "image_picker",
          "id": "custom-still-icons",
          "label": "Add Icons"
        },
        {
          "type": "richtext",
          "id": "custom-still-icons-title",
          "label": "Add Title"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "Custom Still Icons List | Aujla",
      "category": "Icons",
      "blocks": [
        {
          "type": "custom-still-icons"
        },
        {
          "type": "custom-still-icons"
        },
        {
          "type": "custom-still-icons"
        }
      ]
    }
  ]
}
{% endschema %}
